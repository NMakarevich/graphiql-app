{
   "root": true,
   "env": { "browser": true, "es2020": true, "node": true },
   "ignorePatterns": ["dist", ".eslintrc.cjs"],
   "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
         "jsx": true
      }
   },
  "plugins": ["@typescript-eslint"],
  "rules": {
      "max-lines-per-function": "off",
      "no-undef":"off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
   },
   "overrides": [
      {
         "files": ["*.tsx"],
         "rules": {
            "max-lines-per-function": ["off"],
            "no-undef": "off"
         }
      }
   ],
   "extends": ["eslint:recommended", "next", "prettier"]
}
